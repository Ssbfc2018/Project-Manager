@model List<Project>

@{
    ViewData["Title"] = "All Projects";
}

<h1>All Projects</h1>

<p>
    <a asp-page="AdminPage">User Manager</a>
    <a asp-page="CreateProject">Create New Project</a>
    <a asp-action="Dashboard">Dashboard</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Deadline</th>
            <th>Budget</th>
            <th>CompletionPercentage</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletionPercentage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                @if (item.CompletionPercentage == 100)
                {
                    <form asp-action="HideCompletedProject" asp-route-projectId="@item.Id">
                        <button type="submit">Hide</button>
                    </form>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
